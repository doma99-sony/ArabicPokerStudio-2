<?xml version="1.0" encoding="UTF-8"?>
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <title>Big Win Background</title>
  <defs>
    <radialGradient id="bgGlow" cx="50%" cy="50%" r="70%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="#FFD700" />
      <stop offset="50%" stop-color="#B8860B" />
      <stop offset="100%" stop-color="#8B4513" />
    </radialGradient>
    <filter id="blur" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="10" />
    </filter>
    <filter id="noise" x="0%" y="0%" width="100%" height="100%">
      <feTurbulence type="fractalNoise" baseFrequency="0.7" numOctaves="2" result="noise" />
      <feColorMatrix type="saturate" values="0" />
      <feComponentTransfer>
        <feFuncA type="table" tableValues="0 0.2" />
      </feComponentTransfer>
      <feComposite in="SourceGraphic" operator="in" />
    </filter>
  </defs>
  
  <!-- Dark Background -->
  <rect x="0" y="0" width="800" height="600" fill="#000" />
  
  <!-- Radial Glow -->
  <circle cx="400" cy="300" r="300" fill="url(#bgGlow)" filter="url(#blur)" opacity="0.7" />
  
  <!-- Pyramid Silhouette -->
  <path d="M200,450 L400,200 L600,450 Z" fill="#000000" opacity="0.5" />
  <path d="M100,450 L250,300 L400,450 Z" fill="#000000" opacity="0.4" />
  <path d="M600,450 L650,350 L700,450 Z" fill="#000000" opacity="0.4" />
  
  <!-- Egyptian Pillars -->
  <rect x="150" y="180" width="30" height="270" fill="#B8860B" opacity="0.6" />
  <rect x="620" y="180" width="30" height="270" fill="#B8860B" opacity="0.6" />
  
  <!-- Column Caps -->
  <rect x="140" y="160" width="50" height="20" fill="#B8860B" opacity="0.7" />
  <rect x="610" y="160" width="50" height="20" fill="#B8860B" opacity="0.7" />
  
  <!-- Light Rays -->
  <path d="M0,0 L800,600" stroke="#FFD700" stroke-width="2" opacity="0.3" filter="url(#blur)" />
  <path d="M800,0 L0,600" stroke="#FFD700" stroke-width="2" opacity="0.3" filter="url(#blur)" />
  <path d="M400,0 L400,600" stroke="#FFD700" stroke-width="3" opacity="0.4" filter="url(#blur)" />
  <path d="M0,300 L800,300" stroke="#FFD700" stroke-width="3" opacity="0.4" filter="url(#blur)" />
  
  <!-- Desert Floor -->
  <rect x="0" y="450" width="800" height="150" fill="#8B4513" opacity="0.6" />
  
  <!-- Noise Texture Overlay -->
  <rect x="0" y="0" width="800" height="600" fill="#FFFFFF" filter="url(#noise)" opacity="0.1" />
</svg>
